<%= form_with(model: idea, local: true, multipart: true) do |form| %>
  <% if idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% idea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<form class="form-horizontal">

  <div class="form-group">
      <label class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="new-name" placeholder="Name">
      </div>

      <div class="form-group">
          <label class="col-sm-2 control-label">Description</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="new-description" placeholder="Description">
          </div>

  <div class="form-group">
     <label class="col-sm-2 control-label">Email address</label>
     <div class="col-sm-10">
     <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
</div>
   </div>

   <div class="form-group">
     <label class="col-sm-2 control-label">Picture</label>
      <div class="btn btn-default col-sm-10">
     <input type="file" id="exampleInputFile">
     <p class="help-block">Upload a picture to represent and visualise your idea.</p>
</div>
   </div>
   <div class="checkbox">
     <label>
       <input type="checkbox"> I hereby agree that the author is awesome.
     </label>
   </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
